from nytfinance.models import *
from django.conf.urls.defaults import *
from nytfinance.feeds import AllDonorCeos
urlpatterns = patterns('nytfinance.views',
     (r'^$', 'finance_index'),
)
urlpatterns += patterns('django.views.generic.list_detail',
    (r'^ceos/$', 'object_list',  {'queryset': Ceo.donated.all(), }, "ceo_list", ),
    (r'^ceos/(?P<object_id>\d+)/$', 'object_detail',  {'queryset': Ceo.objects.all(), }, "ceo_detail", ),
    (r'^candidates/$', 'object_list',  {'queryset': Candidate.objects.all(), }, "candidate_list", ),
    (r'^candidates/(?P<object_id>\d+)/$', 'object_detail',  {'queryset': Candidate.objects.all(), }, "candidate_detail", ),
    (r'^industries/$', 'object_list',  {'queryset': Industry.objects.all(), }, "industry_list", ),
    (r'^industries/(?P<object_id>\d+)/$', 'object_detail',  {'queryset': Industry.objects.all(), }, "industry_detail", ),
)


feeds = {
    'ceo_donors_all': AllDonorCeos,
}

urlpatterns += patterns('',
    (r'^feeds/(?P<url>.*)/$', 'django.contrib.syndication.views.feed',
          {'feed_dict': feeds}),
)

